@{
    ViewData["Title"] = "About Us";
}

    <!-- About Us Section -->
    <div class="about-us">
    <div class="row align-items-center">
        <div class="col-md-6">
            <img src="https://m.media-amazon.com/images/I/41KvYclbIFL._AC_SY580_.jpg" class="img-fluid rounded" alt="About Us">
        </div>
        <div class="col-md-6">
            <h2>About Us</h2>
            <p>
                At <strong>Aesthetica</strong>, we go beyond aesthetics. Our platform offers an interactive blog
                filled with expert tips and the latest trends, a style selector to match designs with your preferences,
                and a budget planner to keep your project on track.
            </p>
            <p>
                With our dynamic quotation generator and room measurement integration,
                you get accurate estimates and a hassle-free experience.
            </p>
        </div>
        </div>
    </div>

    <!-- Meet Our Team -->
<div class="Our-team">
    <div class="text-center mt-5">
        <h2>Meet Our Team</h2>
        <p>Dedicated to Design Excellence</p>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm text-center">
                <img src="https://www.shutterstock.com/image-photo/businessman-glasses-showing-smile-260nw-1685161825.jpg" class="card-img-top rounded-circle mx-auto mt-3" class="card-img-top rounded-circle mx-auto mt-3" style="width: 100px;" alt="Architect">
                <div class="card-body">
                    <h5 class="card-title">Architect</h5>
                    <p class="card-text">
                        We believe in collaboration, creativity, and client satisfaction, making us the perfect choice for your next design endeavor.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm text-center">
                <img src="https://themes.muffingroup.com/be/classic/wp-content/uploads/2014/05/our_team_3.jpg" class="card-img-top rounded-circle mx-auto mt-3" style="width: 100px;" alt="Developer">
                <div class="card-body">
                    <h5 class="card-title">Developer</h5>
                    <p class="card-text">
                        Innovation, passion, and attention to detail are the cornerstones of our team's success, driving us to exceed expectations.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm text-center">
                <img src="https://www.revolution.com/wp-content/uploads/2015/03/Meredith_Serious.jpg" class="card-img-top rounded-circle mx-auto mt-3" style="width: 100px;" alt="Project Manager">
                <div class="card-body">
                    <h5 class="card-title">Project Manager</h5>
                    <p class="card-text">
                        Our project managers bring efficiency and structure, ensuring seamless execution and success for every project.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>